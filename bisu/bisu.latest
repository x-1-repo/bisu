# Execute a command when quit
separate_command() {
    local input=$(printf '%s ' "$@") # Full input string
    local cmd
    local args
    local params=""

    # Step 1: Extract command and parameters using `awk` + `while IFS` to handle space and empty string
    while IFS= read -r word; do
        if [ -z "$cmd" ]; then
            cmd="$word" # First word is the command
        else
            params="$params $word" # Everything after is considered a parameter
        fi
    done <<<"$(echo "$input" | awk '{for(i=1;i<=NF;i++) print $i}')" || return 0

    if [ -z "$cmd" ]; then
        return 1
    fi

    arr_reset || return 1

    arr_set_val "CURRENT_COMMAND" "$cmd"
    arr_set_val "CURRENT_ARGS" "$params"

    return 0
}

# Register the current command
register_current_command() {
    CURRENT_PID="$$"
    local params=($(printf '%s ' "$@"))
    local current_file_path=""
    local current_args=""

    for param in "${params[@]}"; do
        if [[ -z "$current_file_path" ]]; then
            current_file_path="$param"
        else
            current_args="$current_args $param"
        fi
    done

    CURRENT_FILE_PATH=$(normalise_string "$current_file_path")
    CURRENT_COMMAND="$CURRENT_FILE_PATH"
    CURRENT_FILE_NAME=$(basename "$CURRENT_FILE_PATH")
    CURRENT_ARGS=$(trim "$current_args")
    [ -n "$CURRENT_ARGS" ] && {
        CURRENT_COMMAND="$CURRENT_COMMAND $CURRENT_ARGS"
    }
    [ -n "$CURRENT_FILE_NAME" ] && {
        USER_CONF_DIR="$HOME/.local/$CURRENT_FILE_NAME"
    }

    array_unique_push "AUTORUN" '\"set_signals\"'

    if atomic_mutex_lock; then
        array_unique_push "AUTORUN" '\"acquire_lock\"'
    fi
}

# Get args and store them in an associative array
get_args() {
    local key value param pos_index=1
    local emptyExpr="$EMPTY_EXPR" # Assign with 0x00 to distinguish empty from null
    local args=$(current_args)

    eval "set -- $(printf '%s ' "$args")" 2>/dev/null || return 1

    # Reset associative array or fail if no args
    [ $# -gt 0 ] && arr_reset || return 1

    while [ $# -gt 0 ]; do
        param="$1"

        case "$param" in
        # Short options: -a value, -yf
        -[a-zA-Z0-9]*)
            key="${param#-}"

            # Multiple short options (-yf → -y + -f)
            while [ -n "$key" ]; do
                single_opt="${key:0:1}"
                arr_set_val "$single_opt" "$emptyExpr"
                key="${key:1}"
            done
            ;;

        # Long options: --option1 value
        --[a-zA-Z0-9][a-zA-Z0-9-_]*)
            key="${param#--}"

            # Handle "--option value" (space-separated value)
            if [ -n "$2" ] && [[ ! "$2" =~ ^- ]]; then
                value="$2"
                shift
            else
                value="$emptyExpr"
            fi
            arr_set_val "$key" "$value"
            ;;

        # Explicit separator "--"
        --)
            shift
            break
            ;;

        # Positional arguments
        *)
            arr_set_val "$pos_index" "$param"
            pos_index=$((pos_index + 1))
            ;;
        esac

        shift
    done

    return 0
}

# Set bash signals
set_signals() {
    trap 'wait' SIGCHLD
    trap "set_title '$DEFAULT_TITLE'" EXIT INT TERM QUIT
    trap 'cleanup' EXIT INT TERM QUIT HUP KILL
    trap 'exit $?' $?
}

# Start autorun list
autorun_start() {
    if ! is_array "AUTORUN"; then
        error_exit "Invalid AUTORUN array."
    fi

    for command in "${AUTORUN[@]}"; do
        execute_command $(printf '%s ' "$command")
    done

    return 0
}

# Function to initialise BISU
initialise() {
    register_current_command $(printf '%s ' "$@") # Need to be in the fixed 1st order
    check_bash_version
    check_bisu_version
    autorun_start
    check_commands_list "BISU_REQUIRED_EXTERNAL_COMMANDS"
    check_commands_list "REQUIRED_EXTERNAL_COMMANDS"
    load_required_scripts
    # Integrated operations
    integrated_ops
    callfunc $(printf '%s ' "$@")
}

# Execute a command when quit
callfunc() {
    get_args
    local action=$(arr_get_val 1)
    [[ "$action" == "callfunc" ]] || {
        return 0
    }

    [ $# -ge 1 ] || {
        echo ""
        return 1
    }

    local current_args=("$(current_args)")
    array_splice "current_args" 0 1
    local func=$(array_access "current_args" 0)
    func=$(normalise_string "$func")
    array_splice "current_args" 0 1
    local params="${current_args[@]}"

    command_exists "$func" || {
        log_message "Function '$func' does not exist."
        return 1
    }

    exec_command "$func $params" || return 1
    return 0
}

# Get the current version of the script.
current_script_version() {
    local version=$(get_importer_var "$(current_filename)_VERSION")
    is_valid_version "$version" || error_exit "Invalid version number definition for $(current_filename)_VERSION: '$version'"
    echo "$version"
}

# Get the current document URI of the script.
current_script_doc_uri() {
    echo $(get_importer_var "$(current_filename)_DOC_URI")
}

# Integrated operations
integrated_ops() {
    get_args
    local param1=$(arr_get_val 1)
    local option_force=$(arr_get_val "f" "force")
    local option_yes=$(arr_get_val "y" "yes")
    local action="$param1"
    local force="false"
    local confirmed="false"
    local choice="y"
    local current_file=$(current_file)
    local current_filename=$(current_filename)
    local target_path=$(target_path)
    local confirm_msg="Are you sure to install $current_filename?"
    local is_matched_action="true"

    [[ -z "$action" ]] && action="$option_force"
    [[ "$action" == "$EMPTY_EXPR" ]] && action=""

    case "$action" in
    "doc" | "document")
        log_message "Please visit [ $(current_script_doc_uri) ] for the document."
        ;;
    "install" | "installation")
        in_array "$option_force" "install" "$EMPTY_EXPR" && force="true"
        in_array "$option_yes" "install" "$EMPTY_EXPR" && confirmed="true"

        if is_installed; then
            choice="n"
            confirm_msg="$current_filename has already been installed at: $target_path. Do you want to reinstall it?"

            if [[ "$force" == "false" ]]; then
                error_exit "$current_filename has already been installed at: $target_path, \
                please use -f if you want to forcefully override it."
            fi
        fi

        if [[ "$confirmed" == "false" ]] && ! confirm "$confirm_msg" "$choice"; then
            error_exit "Aborted."
        fi

        install_script
        ;;
    *)
        is_matched_action="false"
        ;;
    esac

    [[ "$is_matched_action" == "false" ]] || quit
}

# Function to check if BISU is installed
is_installed() {
    local target_path=$(target_path)
    is_file "$target_path" || return 1
    return 0
}

# Function: install_script
install_script() {
    if is_installed; then
        log_message "Detected existing installation, backup will be created."
        local date_str=$(date +'%Y%m')
        local uuid=$(uuidv4)
        local target_path=$(target_path)
        local current_file=$(current_file)
        local current_filename=$(current_filename)
        local backup_dir="$(user_backup_dir)/$date_str"
        local current_script_version="$(/bin/bash "$target_path" callfunc current_script_version)"
        current_script_version=$(strtolower "$current_script_version")
        string_starts_with "$current_script_version" "v" || current_script_version="v$current_script_version"
        local backup_path="${backup_dir}/${current_filename}.${current_script_version}_${uuid}"
        log_message "Moving $target_path to the path: $backup_path"
        mkdir_p "$backup_dir"
        move_file "$target_path" "$backup_path"
        log_message "Your previous installation has been backed up to: $backup_path"
    fi

    log_message "Moving $current_filename to the path: $target_path"
    exec_command "cp \"$current_file\" \"$target_path\"" || error_exit "Failed to install $current_filename"
    log_message "Done."
}

# Initialisation
initialise $(printf '"%s" ' "$0" "$@")
